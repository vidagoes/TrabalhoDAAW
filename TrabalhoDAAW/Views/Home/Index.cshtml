@model IEnumerable<TrabalhoDAAW.Models.Produto>

@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4">C# MUSIC</h1>
    <p>Página em Construção</p>

</div>

@foreach (var item in Model)
{
    <div class="card" style="width: 18rem; display: inline-block; margin-right: 10px;">
        <img src="@item.LinkImagem" class="card-img-top" height="320px" />
        <div class="card-body">
            <h5>@item.Modelo</h5>
            <a asp-controller="Produtos"
               asp-action="Details"
               asp-route-id="@item.Id"
               class="btn btn-primary">Saiba Mais...</a>
        </div>
    </div>
}